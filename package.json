    "postcss-preset-env": "^7.8.3",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.8.1",
    "sass-loader": "^13.3.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.15.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-webpack-plugin": "^3.3.0",
    "svelte": "^3.53.1",
